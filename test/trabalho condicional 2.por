//exercicio 4
programa
{
	
	funcao inicio()
	{
	
	//declaracao variaveis
 inteiro numero


 escreva("entre com seu numero ")
 leia (numero)
    // resolucao de exercicio

//numero negativo parte 2
    se (numero<0)
    escreva("e negativo")
    se (numero >0) 
    escreva ("e positivo ")
 
// numero par ou impar parte 1

    se (numero%2==0)
   escreva ("o numero", numero, " e par")
    senao
    escreva ("o numero ", numero, " e impar")
  
	}
}
