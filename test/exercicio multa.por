//exercicio 1

programa
{
	
	funcao inicio()
	{
	inteiro P, E, M
	
	escreva("digite aqui o peso: ")
	leia(P)

	se( P>50)
	{
		E = P-50
		M = E*4
	}
	senao
      E=0
      M=0
	escreva (" excesso: ", E, " e a multa: ", M)
	}
}
